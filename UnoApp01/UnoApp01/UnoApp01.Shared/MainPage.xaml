<Page
    x:Class="UnoApp01.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnoApp01"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer>
        
        <StackPanel x:Name="layoutRoot" HorizontalAlignment ="Center"  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		    <TextBlock Text="Hello, Counter!" TextAlignment="Center" Margin="20" FontSize="30" />
		    <Ellipse x:Name ="circle" Width ="300" Height = "300"  Margin="20" />
		    <TextBlock x:Name ="counter"  Text="Count = 0" TextAlignment="Center" Margin="20" FontSize="50" />
            <Button x:Name ="resetButton" Content="Reset" HorizontalAlignment="Center" Margin="20" FontSize="20" ClickMode="Release"  Width="150"/>
        </StackPanel>
        
    </ScrollViewer>
</Page>
